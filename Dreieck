import java.util.Scanner;

public class Dreieck {

	public static void main(String[] args) {
		Scanner eingabe = new Scanner(System.in);
		
		float a = Float.parseFloat(eingabe.nextLine());
		
		System.out.println("Bitte Seite B eingeben: ");
		float b = Float.parseFloat(eingabe.nextLine());
		
		System.out.println("Bitte Seite C eingeben: ");
		float c = Float.parseFloat(eingabe.nextLine());
		
		for (int i = 0;  i < a; i++) {
			
		}
		
		
		System.out.println("Die Abmessungen des Dreiecks lauten: " + a + " x " + b + " x " + c );
		
		
		eingabe.close();
	}
}
