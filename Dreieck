import java.util.Scanner;

public class Dreieck {

	public static void main(String[] args) {
		Scanner eingabe = new Scanner(System.in);
		
		System.out.println("Gleichschenkliges Dreieck! \n Bitte die Höhe eingeben: ");
		
		float h = Float.parseFloat(eingabe.nextLine());
		
		//die Seitenlänge des Dreiecks berechnen
		float l = h*2;
		//umwandeln in Integer
		int laenge = (int)l;
		
		
		//einen leeren String initialisieren
		String sterne = "";
		String leer = " ";
		
		
		for(int i = 0; i <= laenge; i++) {
			
			System.out.println(sterne);
			sterne += "*";
			leer += " ";
		}
		
		for(int j = laenge - 1; j > 0; j--) {
			sterne += "*";
			//System.out.println(sterne);
		}
	
		eingabe.close();
	}


}
